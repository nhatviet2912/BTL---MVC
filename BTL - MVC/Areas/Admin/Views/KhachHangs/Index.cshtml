@model IEnumerable<BTL___MVC.Database.KhachHang>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table class="table table-bordered table-striped" id="dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Khachhang_id)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tenkhachhang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anhdaidien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngaysinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sdt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diachi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Khachhang_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tenkhachhang)
        </td>
        <td>
            <img src="~/Image/@item.Anhdaidien" style="width: 100px;"/>
            @*@Html.DisplayFor(modelItem => item.Anhdaidien)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaysinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sdt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            
            @Html.ActionLink(" ", "Details", new { id = item.Khachhang_id }, new { @class = "btn btn-info fa fa-eye" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.Khachhang_id }, new { @class = "btn btn-danger fa fa-trash" })
        </td>
    </tr>
}

</table>
