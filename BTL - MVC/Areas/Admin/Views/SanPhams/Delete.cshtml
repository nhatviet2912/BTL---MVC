@model BTL___MVC.Database.SanPham

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


<div>
    <h4>SanPham</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tensanpham)
        </dd>

        <dt>
            Ảnh
        </dt>

        <dd>
           
            <img src="~/Image/@Model.Anh" style="width: 150px; height : 150px; " />


        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluong)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.Raw(Model.Mota)
        </dd>
        <dt>
            Kích cỡ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Kichco)
        </dd>
        <dt>
            Độ phân giải
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dophangiai)
        </dd>
        <dt>
            Gía khuyến mãi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Giakhuyenmai)
        </dd>

        <dt>
            Tên loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiSanPham.Tenloai)
        </dd>
        <dt>
            Lượt đánh giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Viewcount)
        </dd>
        <dt>
            Giảm giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReducePrice)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />  <hr />
            @Html.ActionLink("Trở lại", "Index")
        </div>
    }
</div>
